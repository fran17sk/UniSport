<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniSport.EditarPerfil">
    <ContentPage.Content>
        <StackLayout>
            <!-- Agrega aquí tus controles para la edición del perfil -->
            <Label Text="Editar Perfil" FontSize="20" />
            <Entry Placeholder="Nombre" Text="{Binding Nombre}" />
            <Entry Placeholder="Correo Electrónico" Text="{Binding Correo}" />
            <Button Text="Guardar" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>